<%- include header.ejs %>

<div class="container">
  <h1>RadioVis: <%= service.name %></h1>

  <dl>
    <dt>Current Text:</dt> <dd><%= service.text %></dd>
    <dt>Current Link:</dt> <dd><a href="<%= service.link %>"><%= service.link %></a></dd>
    <dt>Current Image:</dt> <dd><a href="<%= service.image %>"><%= service.image %></a></dd>
  </dl>

  <h2>Bearers</h2>
  <ul>
    <% service.bearers.forEach(function(bearerId) { %>
      <li><%= bearerId %></li>
    <% }) %>
  </ul>
  
</div>

